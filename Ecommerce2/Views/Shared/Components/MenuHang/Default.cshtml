@model IEnumerable<Ecommerce2.ViewModels.MenuHangVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="SanPham" asp-action="Index" asp-route-loai ="@item.MaHang">
                            <i class="fas fa-apple-alt me-2"></i>@item.TenHang
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>