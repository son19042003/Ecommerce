@model Ecommerce2.Models.HoaDon

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminHoaDon" asp-action="Index">Quản lý hóa đơn</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin hóa đơn</span>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="AdminHoaDon" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHd" />
            <input type="hidden" asp-for="MaKh" />
            <input type="hidden" asp-for="NgayDat" />
            <input type="hidden" asp-for="CachThanhToan" />
            <input type="hidden" asp-for="CachVanChuyen" />
            <input type="hidden" asp-for="PhiVanChuyen" />
            <input type="hidden" asp-for="MaNv" />
            <div class="media align-items-center m-b-15">
                <h4>Thông tin hóa đơn</h4>
            </div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label">Tên khách hàng</label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                <textarea asp-for="DiaChi" class="form-control"></textarea>
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienThoai" class="control-label">Điện thoại</label>
                <input asp-for="DienThoai" class="form-control" />
                <span asp-validation-for="DienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTrangThai" class="control-label">Trạng thái</label>
                <input asp-for="MaTrangThai" class="form-control" />
                <span asp-validation-for="MaTrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success btn-tone m-r-5" asp-action="Index">Quay lại danh sách</a>
</div>