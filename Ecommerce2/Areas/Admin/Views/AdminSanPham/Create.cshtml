@model Ecommerce2.Models.SanPham

@{
    ViewData["Title"] = "Create";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminSanPham" asp-action="Index">Quản lý sản phẩm</a>
            <span class="breadcrumb-item active">Thêm sản phẩm</span>
        </nav>
    </div>
</div>

<form asp-controller="AdminSanPham" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="media align-items-center m-b-15">
        <h4>Thông tin sản phẩm</h4>
    </div>
    <div class="form-group">
        <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
        <input class="form-control" asp-for="TenSp" />
        <span asp-validation-for="TenSp" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="GiaBan" class="control-label">Giá</label>
            <input class="form-control" asp-for="GiaBan" />
            <span asp-validation-for="GiaBan" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="GiamGia" class="control-label">Giảm giá</label>
            <input class="form-control" asp-for="GiamGia" />
            <span asp-validation-for="GiamGia" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="MaHang" class="control-label">Hãng sản xuất</label>
            <select class="custom-select" asp-for="MaHang" required asp-items="ViewBag.DanhMucHang">
                <option value="" disabled selected> Chọn danh mục</option>
            </select>
            <span asp-validation-for="MaHang" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="SoLuong" class="control-label">Số lượng</label>
            <input class="form-control" asp-for="SoLuong" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Hinh" class="font-weight-semibold">Ảnh đại diện</label>
            <input name="fThumb" type="file" class="form-control-file" asp-for="Hinh" />
            <span asp-validation-for="Hinh" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NgaySx" class="font-weight-semibold">Ngày sản xuất</label>
            <div class="input-affix m-b-10">
                <i class="prefix-icon anticon anticon-calendar"></i>
                <input asp-for="NgaySx" class="form-control datepicker-input" placeholder="Ngày sản xuất" />
            </div>
            <span asp-validation-for="NgaySx" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="MoTaDonVi" class="control-label">Mô tả ngắn</label>
            <input class="form-control" asp-for="MoTaDonVi" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TenAlias" class="control-label">Tên alias</label>
            <input class="form-control" asp-for="TenAlias" />
            <span asp-validation-for="TenAlias" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="BaoHanh" class="control-label">Bảo hành</label>
            <input class="form-control" asp-for="BaoHanh" />
            <span asp-validation-for="BaoHanh" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="MaNcc" class="control-label">Nhà cung cấp</label>
            <input class="form-control" asp-for="MaNcc" />
            <span asp-validation-for="MaNcc" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MoTa" class="control-label">Mô tả</label>
        <input asp-for="MoTa" class="form-control" />
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a class="btn btn-success btn-tone m-r-5" asp-action="Index">Quay lại danh sách</a>
</div>